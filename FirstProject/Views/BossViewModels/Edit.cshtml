@model FirstProject.Models.BossViewModel

@using (@Html.BeginForm("Edit","BossViewModels",FormMethod.Post))
{
    <div class="modal-content">
        <div class="modal-header">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
            
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                @Html.AntiForgeryToken()

                
                    <h4>Редактирование времени смерти</h4>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    @Html.HiddenFor(model => model.Id)

                    
                            @Html.HiddenFor(model => model.Name)
                            @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                     

                    
                            @Html.HiddenFor(model => model.KdTime)
                            @Html.ValidationMessageFor(model => model.KdTime, "", new {@class = "text-danger"})
                     

                    
                            @Html.HiddenFor(model => model.KdCount)
                            @Html.ValidationMessageFor(model => model.KdCount, "", new {@class = "text-danger"})
                    
                    
                        @Html.LabelFor(model => model.LastTime)
                      
                            @Html.EditorFor(model => model.LastTime)
                            @Html.ValidationMessageFor(model => model.LastTime, "", new {@class = "text-danger"})
                    

               
                        <input type="submit" value="Save" class="btn btn-default"/>
                  
                    
                


                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

           </dl>
        </div>
    </div>
}